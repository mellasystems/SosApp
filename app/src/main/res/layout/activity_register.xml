<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backdesign"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro de Usuario"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:gravity="center"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edtdesign"
                android:padding="10dp"
                android:textColorHint="@android:color/white"
                android:hint="Email:"
                android:id="@+id/email_reg"
                android:inputType="textEmailAddress"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edtdesign"
                android:padding="10dp"
                android:textColorHint="@android:color/white"
                android:hint="Nombre completo:"
                android:id="@+id/name_reg"
                android:inputType="textPersonName"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edtdesign"
                android:padding="10dp"
                android:textColorHint="@android:color/white"
                android:hint="Contraseña:"
                android:inputType="textPassword"
                android:id="@+id/password_reg"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edtdesign"
                android:padding="10dp"
                android:textColorHint="@android:color/white"
                android:hint="Confirme la contraseña:"
                android:inputType="textPassword"
                android:id="@+id/confpassword_reg"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Usuario"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/btn_tecnico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tecnico"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="30dp"
                    />

                <RadioButton
                    android:id="@+id/btn_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="30dp"/>
            </RadioGroup>


            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edtdesign"
                android:popupBackground="@drawable/backdesign"
                android:theme="@style/spinnerTheme"
                android:padding="10dp"
                android:prompt="@string/especialidad_name"
                android:entries="@array/especialidad_array"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/edtdesign"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Registrar"
                android:id="@+id/btn_register"
                android:textAppearance="?android:textAppearanceMedium"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No tienes cuenta? Registrate aqui"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:padding="8dp"
                android:id="@+id/txt_register"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_marginTop="100dp"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>